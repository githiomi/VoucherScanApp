<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.VoucherScan" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->

        <!-- Status Bar -->
        <item name="android:statusBarColor">@color/transparent</item>
        <item name="statusBarBackground">@color/transparent</item>
        <!-- Fonts -->
        <item name="boldFont">@font/koho_bold</item>
        <item name="regularFont">@font/koho_medium</item>
        <item name="semiBoldFont">@font/koho_semibold</item>
        <item name="android:textColor">?mainTextColor</item>
        <!-- Page Transitions -->
        <item name="android:windowEnterAnimation">@android:anim/fade_in</item>
        <item name="android:windowExitAnimation">@android:anim/fade_out</item>
        <item name="android:activityOpenEnterAnimation">@anim/fade_in</item>
        <item name="android:activityCloseEnterAnimation">@anim/fade_in</item>
        <item name="android:activityOpenExitAnimation">@anim/fade_out</item>
        <item name="android:activityCloseExitAnimation">@anim/fade_out</item>
    </style>

    <style name="Light.Theme.VoucherScan" parent="Base.Theme.VoucherScan" >
        <item name="colorPrimary">@color/green</item>
        <item name="mainBackgroundColor">@color/platinum</item>
        <item name="altBackgroundColor">@color/white</item>
        <item name="contrastBackgroundColor">@color/smokyBlack</item>
        <item name="mainTextColor">@color/darkColor_700</item>
        <item name="altTextColor">@color/celestialBlue</item>
        <item name="contrastTextColor">@color/brightColor_700</item>
        <item name="mainIconColor">@color/royalBlue</item>
        <item name="altIconColor">?attr/mainTextColor</item>
        <item name="customCardBackgroundColor">?attr/altBackgroundColor</item>
        <item name="customCardElevation">50dp</item>
        <item name="customCardCornerRadius">20dp</item>
        <item name="customInputFieldBackground">?attr/altBackgroundColor</item>
        <item name="customInputFieldIconColor">?attr/mainIconColor</item>
        <item name="customInputFieldHintColor">@color/royalBlue</item>
        <item name="customInputFieldInputColor">?attr/mainTextColor</item>
        <item name="customInputFieldErrorColor">@color/errorColor_900</item>
    </style>
</resources>
